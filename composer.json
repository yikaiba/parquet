{
    "name": "jocoon/parquet",
    "description": "Thrift-based PHP implementation for using the Apache Parquet format",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin",
            "email": "kevin@jocoon.de"
        }
    ],
    "require": {
        "php" : ">=7.2 <=8.0.99",
        "ext-gmp" : "*",
        "ext-bcmath" : "*",
        "ext-zlib": "*",
        "pear/math_biginteger" : "^1.0",
        "packaged/thrift": "^0.13.0",
        "nelexa/buffer": "^1.3"
    },
    "suggest" : {
      "ext-snappy" : "Install/compile snappy extension to get support for snappy compression reading/writing"
    },
    "autoload": {
        "psr-4": {
            "jocoon\\parquet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jocoon\\parquet\\tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpunit/php-code-coverage": "^7.0"
    }
}
